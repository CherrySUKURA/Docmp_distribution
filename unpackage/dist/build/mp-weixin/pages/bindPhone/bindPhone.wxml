<view class="bindPhone-content"><button data-event-opts="{{[['tap',[['jumpIndex']]]]}}" class="jump" bindtap="__e">跳过</button><view class="bindContent"><view class="title _h1">绑定手机号</view><view class="item"><image class="icon" src="../../static/Phone.png"></image><input class="user-input phone" type="text" placeholder="输入手机号" maxlength="11" id="phone-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['bindePhone']]]]]}}" value="{{bindePhone.mobile}}" bindinput="__e"/></view><view class="item"><image class="icon" src="../../static/choose.png"></image><button class="send" disabled="{{ifSendChoose}}" data-event-opts="{{[['tap',[['bindChoose']]]]}}" bindtap="__e">{{ifSendChoose==false?text:text+'s后重新发送'}}</button><input class="user-input verification" type="text" placeholder="输入验证码" maxlength="6" id="verification-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','code','$event',[]],['bindePhone']]]]]}}" value="{{bindePhone.code}}" bindinput="__e"/></view><button class="bindBtn" type="default" data-event-opts="{{[['tap',[['RequestHttpBind']]]]}}" bindtap="__e">绑定手机号</button></view></view>