<view class="login-content"><view class="logo"><view class="logo-img"><image src="../../static/logo.jpg"></image></view></view><view class="user"><block wx:if="{{choose}}"><view class="userLogin"><view class="item"><image class="icon" src="../../static/username.png"></image><input class="user-input username" type="text" placeholder="输入用户名" maxlength="12" id="username-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['login']]]]]}}" value="{{login.username}}" bindinput="__e"/></view><view class="item"><image class="icon" src="../../static/password.png"></image><input class="user-input password" type="text" placeholder="输入密码" password="{{true}}" maxlength="12" id="password-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['login']]]]]}}" value="{{login.password}}" bindinput="__e"/></view></view></block><block wx:if="{{!choose}}"><view class="userLogin"><view class="item"><image class="icon" src="../../static/Phone.png"></image><input class="user-input phone" type="text" placeholder="输入手机号" maxlength="11" id="phone-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['PhoneLogin']]]]]}}" value="{{PhoneLogin.mobile}}" bindinput="__e"/></view><view class="item"><image class="icon" src="../../static/choose.png"></image><input class="user-input verification" type="text" placeholder="输入验证码" maxlength="6" id="verification-input" adjust-position="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','code','$event',[]],['PhoneLogin']]]]]}}" value="{{PhoneLogin.code}}" bindinput="__e"/><button class="send" disabled="{{ifSendChoose}}" data-event-opts="{{[['tap',[['sendChoose']]]]}}" bindtap="__e">{{ifSendChoose==false?text:text+'s后重新发送'}}</button></view></view></block><button data-event-opts="{{[['tap',[['RquestUserData']]]]}}" class="login-btn" bindtap="__e">登录</button><text class="tag">注：仅热麦合作伙伴可使用，如需登录请联系所在省区客服</text><button class="chooseBtn" type="default" data-event-opts="{{[['tap',[['chooseChange']]]]}}" bindtap="__e">{{choose==true?'短信验证码登录':'账号密码登录'}}</button></view></view>